<?xml version="1.0" encoding="UTF-8"?>
<annotations version="1.0">

	<metadata name="Factory"
			  description="Describes an object that can function as an object factory">
		<context name="class"/>
		<attribute name="factoryMethod"
				   type="String"
				   required="true"/>
	</metadata>

	<metadata name="ExternalProperties"
			  description="Describes a location (URI) of an external properties file">
		<context name="class"/>
		<attribute name="location"
				   type="String"
				   required="true"/>
		<attribute name="required"
				   type="Boolean"
				   required="false"
				   defaultValue="true"/>
		<attribute name="preventCache"
				   type="Boolean"
				   required="false"
				   defaultValue="true"/>
	</metadata>

	<metadata name="Property"
			  description="Describes the configuration of a single property/accessor">
		<context name="variable"/>
		<context name="getter"/>
		<context name="setter"/>
		<attribute name="name"
				   type="String"
				   required="false"/>
		<attribute name="value"
				   type="String"
				   required="false"/>
		<attribute name="ref"
				   type="String"
				   required="false"/>
		<attribute name="namespace"
				   type="String"
				   required="false"/>
		<attribute name="isStatic"
				   type="Boolean"
				   required="false"
				   defaultValue="false"/>
	</metadata>

	<metadata name="Component"
			  description="Used to define object definitions on a class which will be used by the class scanning system in Spring Actionscript">
		<context name="class"/>
		<context name="variable"/>
		<context name="getter"/>
		<context name="setter"/>
		<attribute name="id"
				   type="String"
				   required="false"
				   defaultValue=""/>
		<attribute name="scope"
				   type="String"
				   required="false"
				   values="singleton,prototype"
				   defaultValue="singleton"/>
		<attribute name="lazyInit"
				   type="String"
				   required="false"
				   defaultValue=""/>
		<attribute name="factoryMethod"
				   type="String"
				   required="false"
				   values=""
				   defaultValue=""/>
		<attribute name="factoryObjectName"
				   type="String"
				   required="false"
				   values=""
				   defaultValue=""/>
		<attribute name="initMethod"
				   type="String"
				   required="false"
				   values=""
				   defaultValue=""/>
		<attribute name="destroyMethod"
				   type="String"
				   required="false"
				   values=""
				   defaultValue=""/>
		<attribute name="autowire"
				   type="String"
				   required="false"
				   values="no,byType,byName,constructor,autodetect"
				   defaultValue="no"/>
		<attribute name="primary"
				   type="String"
				   required="false"
				   values=""
				   defaultValue=""/>
		<attribute name="dependsOn"
				   type="String"
				   required="false"
				   values=""
				   defaultValue=""/>
		<attribute name="skipPostProcessors"
				   type="String"
				   required="false"
				   values=""
				   defaultValue=""/>
		<attribute name="skipMetadata"
				   type="String"
				   required="false"
				   values=""
				   defaultValue=""/>
		<attribute name="dependencyCheck"
				   type="String"
				   required="false"
				   values="none,simple,objects,all"
				   defaultValue="none"/>
		<attribute name="parentName"
				   type="String"
				   required="false"/>
		<attribute name="isAbstract"
				   type="Boolean"
				   required="false"/>
		<attribute name="childContextAccess"
				   type="String"
				   required="false"
				   values="none,definition,singleton,full"
				   defaultValue="public"/>
	</metadata>

	<metadata name="Constructor"
			  description="Used to define constructor arguments that need to be injected by Spring Actionscript">
		<context name="class"/>
		<context name="variable"/>
		<context name="getter"/>
		<context name="setter"/>
		<attribute name="args"
				   type="String"
				   required="false"
				   defaultValue=""/>
	</metadata>

	<metadata name="Inject"
			  description="Used to define values or object that need to be injected by Spring Actionscript">
		<context name="variable"/>
		<context name="getter"/>
		<context name="setter"/>
		<attribute name="value"
				   type="String"
				   required="false"
				   defaultValue=""/>
		<attribute name="ref"
				   type="String"
				   required="false"
				   defaultValue=""/>
	</metadata>

	<metadata name="Invoke"
			  description="Used to define argument values or references that need to be injected by Spring Actionscript">
		<context name="method"/>
		<attribute name="args"
				   type="String"
				   required="false"
				   defaultValue=""/>
		<attribute name="name"
				   type="String"
				   required="false"/>
		<attribute name="namespace"
				   type="String"
				   required="false"/>
	</metadata>

	<metadata name="EventHandler"
			  description="Adds the annotated method as an event listener to the EVentBus">
		<context name="method">
			<attribute name="name"
					   type="String"
					   required="false"
					   defaultValue="null"/>
			<attribute name="properties"
					   type="String"
					   required="false"
					   defaultValue="null"/>
			<attribute name="clazz"
					   type="String"
					   required="false"
					   defaultValue="null"/>
		</context>
	</metadata>

	<metadata name="RouteEvents"
			  description="Re-routes the events dispatched by an object to the EventBus">
		<context name="class"/>
		<attribute name="events"
				   type="String"
				   required="false"
				   defaultValue="null"/>
	</metadata>

	<metadata name="RouteMVCEvents"
			  description="Re-routes the events dispatched by an object to the EventBus for use by the MVC micro-framework">
		<context name="class"/>
		<attribute name="events"
				   type="String"
				   required="false"
				   defaultValue="null"/>
	</metadata>

	<metadata name="Command"
			  description="Indicates that the decorated class is a command that is triggered by an Event">
		<context name="class"/>
		<attribute name="eventType"
				   type="String"
				   required="false"
				   defaultValue=""/>
		<attribute name="eventClass"
				   type="String"
				   required="false"
				   defaultValue=""/>
		<attribute name="executeMethod"
				   type="String"
				   required="false"
				   defaultValue=""/>
		<attribute name="properties"
				   type="String"
				   required="false"
				   defaultValue=""/>
		<attribute name="priority"
				   type="String"
				   required="false"
				   defaultValue=""/>
	</metadata>

	<metadata name="Autowired"
			  description="Determines if the annotated properties will be automatically injected by Spring Actionscript">
		<context name="variable"/>
		<context name="getter"/>
		<context name="setter"/>
		<attribute name="mode"
				   type="String"
				   required="false"
				   values="byType,byName,constructor,autodetect,no"
				   defaultValue="no"/>
		<attribute name="name"
				   type="String"
				   required="false"
				   defaultValue="null"/>
		<attribute name="property"
				   type="String"
				   required="false"
				   defaultValue="null"/>
		<attribute name="externalProperty"
				   type="String"
				   required="false"
				   defaultValue="null"/>
	</metadata>

	<metadata name="Required"
			  description="Properties annotated with the [Required] metadata MUST be injected, if Spring Actionscript fails to inject a valid value an error will be thrown">
		<context name="variable"/>
		<context name="getter"/>
		<context name="setter"/>
	</metadata>

</annotations>
